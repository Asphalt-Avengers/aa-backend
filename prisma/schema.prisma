generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  firstName        String?
  lastName         String?
  email            String   @unique
  password         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Detection {
  id               Int       @id @default(autoincrement())
  latitude         Float
  longitude        Float
  severity         DetectionSeverity?
  description      String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @default(now()) @updatedAt
  s3Url            String
  reportId         Int
  report           Report @relation(fields: [reportId], references: [id])
}

model Report {
  id               Int       @id @default(autoincrement())
  geom             String     @unique    
  description      String?
  detections       Detection[]
  comments         String?
  status           ReportStatus?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @default(now()) @updatedAt
  details          String?
}

enum ReportStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}

enum DetectionSeverity {
  MINOR
  MODERATE
  SIGNIFICANT
  SEVERE
  CRITICAL
}