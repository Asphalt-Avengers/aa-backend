generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  firstName        String?
  lastName         String?
  email            String   @unique
  password         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Pothole {
  id               Int       @id @default(autoincrement())
  latitude         Float?
  longitude        Float?
  severity         PotholeSeverity?
  description      String?
  images           PotholeImage[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  report           Report?
}

model PotholeImage {
  id               Int       @id @default(autoincrement())
  pothole          Pothole   @relation(fields: [potholeId], references: [id])
  boxes            PotholeImageBox[]
  potholeId        Int
  s3Url            String    
  createdAt        DateTime  @default(now())
}

model PotholeImageBox {
  id               Int       @id @default(autoincrement())
  potholeImage     PotholeImage   @relation(fields: [potholeImageId], references: [id])
  potholeImageId   Int
  xCenter          Float
  yCenter          Float
  width            Float
  height           Float 
  createdAt        DateTime  @default(now())
}

model Report {
  id               Int       @id @default(autoincrement())
  location         String?
  description      String?
  pothole          Pothole   @relation(fields: [potholeId], references: [id])
  potholeId        Int       @unique
  comments         String?
  status           ReportStatus?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  details          String?
}

enum ReportStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}

enum PotholeSeverity {
  MINOR
  MODERATE
  SIGNIFICANT
  SEVERE
  CRITICAL
}