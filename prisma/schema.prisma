generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id               Int      @id @default(autoincrement())
  firstName        String?
  lastName         String?
  email            String   @unique
  password         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model pothole {
  id              Int       @id @default(autoincrement())
  latitude        Float?
  longitude       Float?
  severity        Int?       // Representing severity of the pothole (e.g., 1-5 scale)
  description     String?
  images          potholeImage[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  report          report?   @relation(fields: [reportId], references: [id])
  reportId        Int?
}

model potholeImage {
  id              Int       @id @default(autoincrement())
  pothole         pothole   @relation(fields: [potholeId], references: [id])
  potholeId       Int
  s3Url           String    
  createdAt       DateTime  @default(now())
}

model report {
  id              Int       @id @default(autoincrement())
  location        String?
  description     String?
  potholes        pothole[]
  comments        String?
  status          String?    // Status of the report, e.g., "Open", "In Progress", "Resolved"
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  details         String?
}
